# === WALLET SETUP ===
def generate_wallets(n=30):
    wallets = []
    for _ in range(n):
        kp = Keypair()
        wallets.append(b58encode(kp.secret_key).decode())
    with open("wallets.json", "w") as f:
        json.dump(wallets, f)
    return wallets

def load_wallets():
    if os.path.exists("wallets.json"):
        with open("wallets.json", "r") as f:
            return json.load(f)
    return generate_wallets()

